extends layout

block content
  h1 #{title}:
  h2 #{book.title}

  br

  if book_instances.length

    p(style="color:rgba(255,0,0,1);") #[strong Delete the following instances of this book before deleting the book. ]

    div(style="margin-left:20px;margin-top:20px")

      h4 Book Instances

      dl
      each instance in book_instances
        dt
          a(style="font-weight:normal;" href=instance.url) Instance ID: #{instance._id}
  
  else
    p Do you really want to delete this book?

    form(method="POST" action="")
      div.form-group
        input#bookid.form-control(type="hidden" name="bookid" required="true" value=book._id)

      button.btn.btn-danger(type="submit") Delete